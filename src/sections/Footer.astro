---
import InstagramIcon from "@/icons/instagram.astro";
import XIcon from "@/icons/x.astro";
---

<footer
  class="mt-20 w-full border-primary dark:border-white border-t-2 flex flex-col md:flex-row justify-center items-center md:justify-between pt-6 pb-20 gap-y-10"
>
  <span class="text-primary text-center dark:text-white">
    © 2024 La Velada del Año <span aria-hidden class="hidden md:inline">|</span
    ><br aria-hidden class="block md:hidden" /> Todos los derechos reservados.
  </span>
  <ul class="flex flex-row gap-x-6 items-center">
    <li>
      <a
        target="_blank"
        rel="noopener"
        href="https://www.instagram.com/infolavelada"
        class="hover:scale-125 hover:opacity-70 inline-block transition"
      >
        <InstagramIcon class="dark:text-white" />
      </a>
    </li>
    <li>
      <a
        target="_blank"
        rel="noopener"
        href="https://x.com/infoLaVelada"
        class="hover:scale-125 hover:opacity-70 inline-block transition"
        ><XIcon class="dark:text-white" /></a
      >
    </li>
  </ul>
</footer>
